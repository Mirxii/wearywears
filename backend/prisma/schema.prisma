// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String    @id @default(uuid())
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  email             String    @unique
  name              String
  password          String
  ownListings       Listing[] @relation("OwnListings")
  favoritedListings Listing[] @relation("FavoritedListings")

  @@index([email], name: "email")
}

enum category {
  SHIRTS
  JACKETS
  PANTS
  SHORTS
  SKIRTS
  DRESSES
  SHOES
  HATS
  ACCESSORIES
  OTHER
}

model Listing {
  id          String   @id @default(uuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  title       String
  description String
  location    String
  image       String   @default("https://upload.wikimedia.org/wikipedia/commons/1/14/No_Image_Available.jpg")
  price       Int
  category    category @default(OTHER)
  postedBy    User     @relation("OwnListings", fields: [postedById], references: [id])
  postedById  String
  favoritedBy User[]   @relation("FavoritedListings")

  @@index([postedById], name: "postedById")
}
